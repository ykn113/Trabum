<div class="container mt-3">
  <div class="row">
    <div class="col-md-5">
      <h2>プロフィール</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>名前</th>
            <td><%= @current_user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @current_user.email %></td>
          </tr>
        </thead>
      </table>
    </div>
    
    <div class="col-md-5 m-auto text-center">
      <h2><i class="fas fa-plane"></i>トラベラーレベル<i class="fas fa-plane"></i></h2>
      <h2><%= @user_level %></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <input type="hidden" class="badge_array" value="<%= @completed_badges %>">
      <h2>獲得バッジ</h2>
      <div class="badge_container">
        <div class="area_badge" id="日本">
          <%= image_tag "Japan.png" %>
        </div>
        <div class="area_badge" id="アジア">
          <%= image_tag "Asia.png" %>
        </div>
        <div class="area_badge" id="オセアニア">
          <%= image_tag "Oceania.png" %>
        </div>
        <div class="area_badge" id="ヨーロッパ">
          <%= image_tag "Europe.png" %>
        </div>
        <div class="area_badge" id="中東">
          <%= image_tag "Middle_East.png" %>
        </div>
        <div class="area_badge" id="アフリカ">
          <%= image_tag "Africa.png" %>
        </div>
        <div class="area_badge" id="北米">
          <%= image_tag "North_America.png" %>
        </div>
        <div class="area_badge" id="南米">
          <%= image_tag "South_America.png" %>
        </div>
      </div>
    </div>
  </div>
  
   <!--退会機能-->
  <div class="row">
    <div class="col-md-12 ">
      <%= link_to '退会する', confirm_unsubscribe_path, class:'btn btn-primary ml-5' %>
    </div>
  </div>
    <div class="icon8-link">
        icons by <a target="_blank" href="https://icons8.com">Icons8</a>
    <div>
</div>
