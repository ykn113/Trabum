<!--エラーメッセージ-->
<% if @post.errors.any? %>
  <div class="container">
    <h5 class=text-danger><%= @post.errors.count %>件のエラーが発生しました</h5>
    <ul class="ml-4">
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-12">
      <h2>旅行を追加</h2>
      <%= form_with model: @post, local:true do |f| %>
        <div class="form">
          <div class="form-group">
            <%= f.label :写真 %><br/>
            <%= f.attachment_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :国名 %><br/>
            <%= f.text_field :country, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :都市名 %><br/>
            <%= f.text_field :city, class:"form-control" %>
          </div>
          <div class="form-group mb-4">
            <%= f.label :エリア %><br/>
            <%= f.select :continent_id, @continent_list, include_blank: "選択してください" %>
          </div>
          <div class="form-group">
            <%= f.label :日付 %><br/>
            <%= f.date_field :from_date %>から<%= f.date_field :to_date %>まで<br/>
          </div>
          <div class="form-group">
            <%= f.label :便名 %><br/>
            <%= f.text_field :flight, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :思い出メモ%><br/>
            <%= f.text_area :memo, class:"form-control" %>
          </div>
        </div>
        <div class="create-btn">
          <%= f.submit '保存', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
